{
    "extends": "airbnb",
    "env": {
        "browser": true,
        "node": true,
        "mocha": true
    },
    "ecmaFeatures": {
        "forOf": true,
        "jsx": true,
        "es6": true
    },
    "rules": {
        "guard-for-in": 0,
        "comma-dangle": [2, "never"],
        "indent": [2, 2, {"SwitchCase": 1}],
        "no-use-before-define": 0
    }
}
